        INSERT INTO BASE_CARGO
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="img != null ">
                img,
            </if>
            <if test="name != null">
                name,
            </if>
            <if test="count != null">
                count,
            </if>
            <if test="createBy != null ">
                create_by
            </if>
            <if test="deptId != null ">
                dept_id
            </if>
        </trim>
        VALUES
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="img != null ">
                #{img},
            </if>
            <if test="name != null">
                #{name}
            </if>
            <if test="count != null">
                #{count}
            </if>
            <if test="createBy != null ">
                #{create_by}
            </if>
            <if test="deptId != null ">
                #{deptId}
            </if>
        </trim>
    </insert>
    <update id="update" parameterType="com.jay.wms.entity.Cargo">
        UPDATE BASE_CARGO SET
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="img != null ">
                img = #{img},
            </if>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="count != null">
                count = #{count},
            </if>
            <if test="createBy != null ">
                create_by = #{createBy}
            </if>
            <if test="deptId != null ">
                dept_id = #{deptId}
            </if>
        </trim>
        WHERE ID = #{id}
    </update>
</mapper>