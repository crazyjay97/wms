        <result property="name" column="name"/>
        <result property="count" column="count"/>
        <result property="createBy" column="create_by"/>
        <result property="deptId" column="dept_id"></result>
    </resultMap>
    <sql id="columnList">
        id,
        img,
        name,
        count,
        dept_id,
        create_by
